<assembly>
    <id>deployment</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>ConfluentKafkaMonitor</outputDirectory>
            <includes>
                <include>README.md</include>
                <include>Changelog.md</include>
                <include>LICENSE</include>
                <include>NOTICE.txt</include>
                <include>log4j2.xml</include>
                <include>monitor.xml</include>
                <include>Confluent-Config-EXAMPLE.json</include>
            </includes>
            <lineEnding>unix</lineEnding>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <directory>target/lib</directory>
            <outputDirectory>ConfluentKafkaMonitor/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>machineagent-*.jar</exclude>
                <exclude>junit-*.jar</exclude>
                <exclude>hamcrest-*.jar</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>ConfluentKafkaMonitorExtension-${pom.version}.jar</source>
            <outputDirectory>ConfluentKafkaMonitor</outputDirectory>
            <destName>ConfluentKafkaMonitorExtension.jar</destName>
        </file>
    </files>
</assembly>
